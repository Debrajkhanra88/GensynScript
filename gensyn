cd rl-swarm

echo "ğŸ“¦ Updating Yarn..."
cd modal-login
yarn install
yarn upgrade
yarn add next@latest
yarn add viem@latest

echo "ğŸš€ Installing Node..."
cd $HOME/rl-swarm
python3 -m venv .venv && . .venv/bin/activate && ./run_rl_swarm.sh

